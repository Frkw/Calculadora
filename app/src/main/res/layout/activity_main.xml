<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1AD6FF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.andre.calculadora.MainActivity">


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/accumulator"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text=""
        android:gravity="right"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/allclear"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="AC"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/delete"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="DEL"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/falta"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text=""
            android:textSize="25sp"
            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/sum"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="25sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/four"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="25sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/one"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="*"
            android:textSize="25sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/zero"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/coma"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text=","
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/division"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="25sp"
            />

    </LinearLayout>

</LinearLayout>
